<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 데이터베이스 접속 설정 --> 
	<bean id="dataSource" 
	destroy-method="close"
	class="org.apache.commons.dbcp.BasicDataSource" 
	p:driverClassName="oracle.jdbc.driver.OracleDriver" 
	p:url="jdbc:oracle:thin:@172.16.3.8:1521:XE" 
	p:username="gobook"  
	p:password="1234"  
	/> 
	
	<!-- MyBatis SQL 실행 클래스  --> 
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
	    <property name="dataSource" ref="dataSource" />
	    <!-- 아래부분은 매핑할 xml파일이 있는 패키지경로를 설정한다. -->
	    <property name="typeAliasesPackage" value="spring.model" />		
	    <!-- spring.model로 시작하는 모델 이름 그래도 alias가 된다...? -->
	    <property name="mapperLocations" value="classpath:mybatis/*.xml" />
	    <!-- src/main/resources안에 있는 mybatis 폴더 안에 .xml을 찾아서 참조 -->
	</bean>
	 
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
	    <constructor-arg name="sqlSessionFactory" ref="sqlSessionFactory" />
	    <!-- constructor-arg : 생성자 /해시코드 전달, value: 문자열 전달 -->
	</bean>
	
	<bean id="c_memberdao" class="spring.model.c_member.C_MemberDAO"	
	p:mybatis-ref="sqlSession">		
		<!-- sqlSession값을 mybatis-ref(참조값)으로 주어라 sqlSessionFactory	 -->
	</bean>
</beans>
